<Window x:Class="BookStore.Views.MainView"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        xmlns:w="clr-namespace:BookStore.Infrastructure"
        mc:Ignorable="d"
        Title="Book store" Height="450" Width="850" MinHeight="320" MinWidth="800" 
        Style="{StaticResource Window}">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Button Content="{StaticResource IconLogout}" Visibility="{Binding IsLogIn}" Command="{Binding Logout}" Style="{StaticResource IconButton}"/>
            <TextBlock Visibility="{Binding IsLogIn}" Text="{Binding LoginText}" Style="{StaticResource TopBarTextBlock}"/>
            <Label Target="{Binding ElementName=loginUser}" Visibility="{Binding IsLogOut}" Style="{StaticResource TopBarLabel}">Login</Label>
            <TextBox x:Name="loginUser" Style="{StaticResource UserTextBox}" Visibility="{Binding IsLogOut}" Text="{Binding LoginField}"/>
            <Label Target="{Binding ElementName=passwordUser}" Visibility="{Binding IsLogOut}" Style="{StaticResource TopBarLabel}">Password</Label>
            <PasswordBox x:Name="passwordUser" Visibility="{Binding IsLogOut}"/>
            <Button Visibility="{Binding IsLogOut}" Command="{Binding Login}" CommandParameter="{Binding ElementName=passwordUser}" Style="{StaticResource TopBarButtons}">Login</Button>
            <Button DockPanel.Dock="Right" Command="{Binding SearchView}" Style="{StaticResource TopBarButtons}">Search</Button>
            <TextBox DockPanel.Dock="Right" x:Name="genreSearch" Style="{StaticResource SearchTextBox}" Text="{Binding GenreSearch}"/>
            <Label DockPanel.Dock="Right" Target="{Binding ElementName=genreSearch}" Style="{StaticResource TopBarLabel}">Genre</Label>
            <TextBox DockPanel.Dock="Right" x:Name="authorSearch" Style="{StaticResource SearchTextBox}" Text="{Binding AuthorSearch}"/>
            <Label DockPanel.Dock="Right" Target="{Binding ElementName=authorSearch}" Style="{StaticResource TopBarLabel}">Author</Label>
            <TextBox DockPanel.Dock="Right" x:Name="bookSearch" Style="{StaticResource SearchTextBox}" Text="{Binding BookSearch}"/>
            <Label DockPanel.Dock="Right" Target="{Binding ElementName=bookSearch}" Style="{StaticResource TopBarLabel}">Name of Book</Label>
        </DockPanel>
        <Grid DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Style="{DynamicResource LeftTriangleButtonStyle}" Command="{Binding AllBooksView}">All books</Button>
            <Button Grid.Row="1" Style="{DynamicResource LeftTriangleButtonStyle}" Command="{Binding NewBooksView}">New books</Button>
            <Button Grid.Row="2" Style="{DynamicResource LeftTriangleButtonStyle}" Command="{Binding BestSellingBooksView}">Best selling books</Button>
            <Button Grid.Row="3" Style="{DynamicResource LeftTriangleButtonStyle}" Command="{Binding MostPopularAuthorsView}">Most popular authors</Button>
            <Button Grid.Row="4" Style="{DynamicResource LeftTriangleButtonStyle}" Command="{Binding MostPopularGenresView}">Most popular genres</Button>
            <Button Grid.Row="5" Style="{DynamicResource LeftTriangleButtonStyle}" Command="{Binding ReservedBooksView}">Reserved books</Button>
            <Button Grid.Row="6" Style="{DynamicResource LeftTriangleButtonStyle}" Command="{Binding SoldBooksView}">Sold books</Button>
        </Grid>
        <Grid DockPanel.Dock="Right" Visibility="{Binding IsAdmin}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Style="{DynamicResource RightTriangleButtonStyle}" Command="{Binding ManageAccountsView}">Manage accounts</Button>
            <Button Grid.Row="1" Style="{DynamicResource RightTriangleButtonStyle}">Manage authors</Button>
            <Button Grid.Row="2" Style="{DynamicResource RightTriangleButtonStyle}">Manage genres</Button>
            <Button Grid.Row="3" Style="{DynamicResource RightTriangleButtonStyle}">Manage publishers</Button>
            <Button Grid.Row="4" Style="{DynamicResource RightTriangleButtonStyle}">Manage books</Button>
            <Button Grid.Row="5" Style="{DynamicResource RightTriangleButtonStyle}">Manage books is store</Button>
            <Button Grid.Row="6" Style="{DynamicResource RightTriangleButtonStyle}">Manage stocks</Button>
            <Button Grid.Row="7" Style="{DynamicResource RightTriangleButtonStyle}">Manage series</Button>
        </Grid>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TableName" Text="{Binding TableName}" Style="{StaticResource TableName}"></TextBlock>
            <GroupBox Grid.Column="1" Header="Period" Visibility="{Binding IsPeriodBarUsed}">
                <StackPanel Orientation="Horizontal">
                    <RadioButton IsChecked="{Binding Period[Day]}" Command="{Binding PeriodChanged}">Day</RadioButton>
                    <RadioButton IsChecked="{Binding Period[Week]}" Command="{Binding PeriodChanged}">Week</RadioButton>
                    <RadioButton IsChecked="{Binding Period[Month]}" Command="{Binding PeriodChanged}">Month</RadioButton>
                    <RadioButton IsChecked="{Binding Period[Year]}" Command="{Binding PeriodChanged}">Year</RadioButton>
                </StackPanel>
            </GroupBox>
        </Grid>
        <UniformGrid DockPanel.Dock="Bottom" Columns="2">
            <Button Command="{Binding ReserveBook}" CommandParameter="{Binding SelectedItem, ElementName=resultBooksView}" Style="{StaticResource TopBarButtons}">Reserve</Button>
            <Button Command="{Binding BuyBook}" CommandParameter="{Binding SelectedItem, ElementName=resultBooksView}" Style="{StaticResource TopBarButtons}">Buy</Button>
        </UniformGrid>
        <Border BorderThickness="2" BorderBrush="#FF6468B2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <DataGrid AutoGeneratingColumn="dg_AutoGeneratingColumn"
                  ItemsSource="{Binding ResultSimpleEnitiesView}"
                  Visibility="{Binding IsSimpleEntitiesUsed}">
                </DataGrid>
                <DataGrid AutoGeneratingColumn="dg_AutoGeneratingColumn"
                  ItemsSource="{Binding ResultReservedBooksView}"
                  Visibility="{Binding IsReservedBookUsed}">
                </DataGrid>
                <DataGrid AutoGeneratingColumn="dg_AutoGeneratingColumn"
                  ItemsSource="{Binding ResultSoldBooksView}"
                  Visibility="{Binding IsSoldBookUsed}">
                </DataGrid>
                <DataGrid AutoGeneratingColumn="dg_AutoGeneratingColumn"
                  ItemsSource="{Binding ResultBooksView}"
                  Visibility="{Binding IsResultBooksUsed}"
                  x:Name="resultBooksView">
                </DataGrid>
                <Grid Visibility="{Binding IsManageAccountsUsed}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid AutoGeneratingColumn="dg_AutoGeneratingColumn"
                  ItemsSource="{Binding ResultManageAccountsView}"
                  x:Name="manageAccountsView">
                    </DataGrid>
                    <UniformGrid Grid.Column="1" Rows="3">
                        <Button Command="{Binding NewAccount}" Style="{StaticResource TopBarButtons}">New</Button>
                        <Button Command="{Binding EditAccount}" CommandParameter="{Binding SelectedItem, ElementName=manageAccountsView}" Style="{StaticResource TopBarButtons}">Edit</Button>
                        <Button Command="{Binding DeleteAccount}" CommandParameter="{Binding SelectedItem, ElementName=manageAccountsView}" Style="{StaticResource TopBarButtons}">Delete</Button>
                    </UniformGrid>
                </Grid>
            </Grid>
        </Border>
    </DockPanel>
</Window>
